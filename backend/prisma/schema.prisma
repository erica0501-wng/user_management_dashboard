generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                @id @default(autoincrement())
  username            String             @unique
  email               String             @unique
  age                 Int?
  createdAt           DateTime           @default(now())
  role                Role               @default(User)
  status              Status             @default(Active)
  joinedDate          DateTime           @default(now())
  lastActive          DateTime           @default(now())
  password            String?
  provider            String             @default("local")
  providerId          String?
  gender              Gender?
  orders              Order[]
  accountBalance      AccountBalance?
  transactions        Transaction[]
  watchlists          Watchlist[]
  sharedWatchlists    SharedWatchlist[]  @relation("OwnedSharedWatchlists")
  watchlistComments   WatchlistComment[] @relation("UserComments")
  watchlistLikes      WatchlistLike[]    @relation("UserLikes")
}

model Order {
  id        Int            @id @default(autoincrement())
  userId    Int
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  symbol    String
  name      String?
  direction OrderDirection
  price     Float
  quantity  Int
  orderType String         @default("Limit")
  session   String?
  status    OrderStatus    @default(Pending)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model AccountBalance {
  id            Int      @id @default(autoincrement())
  userId        Int      @unique
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  availableCash Float    @default(100000)
  totalInvested Float    @default(0)
  updatedAt     DateTime @updatedAt
}

model Transaction {
  id            Int             @id @default(autoincrement())
  userId        Int
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          TransactionType
  amount        Float
  paymentMethod String?
  createdAt     DateTime        @default(now())
}

enum Role {
  Admin
  User
}

enum Status {
  Active
  Inactive
  Banned
}

enum Gender {
  Male
  Female
}

enum OrderDirection {
  Buy
  Sell
}

enum OrderStatus {
  Pending
  Filled
  Cancelled
}

enum TransactionType {
  TopUp
  Withdraw
}

model Watchlist {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  symbol    String
  createdAt DateTime @default(now())

  @@unique([userId, symbol])
}

// Social features for sharing watchlists
model SharedWatchlist {
  id          Int                 @id @default(autoincrement())
  ownerId     Int
  owner       User                @relation("OwnedSharedWatchlists", fields: [ownerId], references: [id], onDelete: Cascade)
  title       String
  description String?
  isPublic    Boolean             @default(true)
  symbols     String[]            // Array of stock symbols
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  comments    WatchlistComment[]
  likes       WatchlistLike[]
}

model WatchlistComment {
  id                Int              @id @default(autoincrement())
  sharedWatchlistId Int
  sharedWatchlist   SharedWatchlist  @relation(fields: [sharedWatchlistId], references: [id], onDelete: Cascade)
  userId            Int
  user              User             @relation("UserComments", fields: [userId], references: [id], onDelete: Cascade)
  content           String
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}

model WatchlistLike {
  id                Int              @id @default(autoincrement())
  sharedWatchlistId Int
  sharedWatchlist   SharedWatchlist  @relation(fields: [sharedWatchlistId], references: [id], onDelete: Cascade)
  userId            Int
  user              User             @relation("UserLikes", fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime         @default(now())

  @@unique([sharedWatchlistId, userId])
}
